# Server port
PORT=5000

# Server absolute root (used for callback URLs)
SERVER_ROOT=http://localhost:5000

# MongoDB (local)
MONGO_URI=mongodb://localhost:27017/career-mapper

# JWT secret (one value, do not put quotes)
JWT_SECRET=your_super_strong_secret_key_here_1234567890_RANDOM_STRING

# Frontend url to receive token after OAuth
OAUTH_CLIENT_URL=http://localhost:5173

# Google OAuth (create Web application in Google Cloud)
GOOGLE_CLIENT_ID=PASTE_GOOGLE_CLIENT_ID_HERE
GOOGLE_CLIENT_SECRET=PASTE_GOOGLE_CLIENT_SECRET_HERE

# Facebook OAuth (create App, set "Valid OAuth Redirect URIs" to http://localhost:5000/auth/facebook/callback)
FACEBOOK_APP_ID=PASTE_FACEBOOK_APP_ID_HERE
FACEBOOK_APP_SECRET=PASTE_FACEBOOK_APP_SECRET_HERE

# Microsoft / Azure AD
MICROSOFT_CLIENT_ID=PASTE_MICROSOFT_CLIENT_ID_HERE
MICROSOFT_CLIENT_SECRET=PASTE_MICROSOFT_CLIENT_SECRET_HERE
MICROSOFT_REDIRECT=http://localhost:5000/auth/microsoft/callback
